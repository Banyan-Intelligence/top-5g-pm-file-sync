# Application Configuration
APP_PORT=8520
APP_CONTEXT_PATH=/api/v1
APP_PROFILE=test
LOG_LEVEL=DEBUG
LOG_FILE_PATH=/app/logs/top-5g-pm-file-sync.log

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pm_file_sync
DB_USERNAME=postgres
DB_PASSWORD=password
DB_MAX_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Batch Processing
BATCH_SIZE=1000

# Kafka Configuration
KAFKA_THREADS_PER_TOPIC=4
KAFKA_MAX_POLL_RECORDS=500
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_AUTO_COMMIT_INTERVAL_MS=5000
KAFKA_MONITORING_ENABLED=true
KAFKA_HEALTH_CHECK_INTERVAL=30000
KAFKA_MAX_RETRIES=3
KAFKA_RETRY_BACKOFF_MS=1000

# Prometheus
PROMETHEUS_ENABLED=true