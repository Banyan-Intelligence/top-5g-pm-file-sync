# Application Configuration
APP_PORT=8520
APP_CONTEXT_PATH=/api/v1

# Kafka Core
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=top-5g-pm-file-sync
KAFKA_TOPIC=top.5g.pm.files
KAFKA_AUTO_OFFSET_RESET=latest

# Kafka Security (set as needed)
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
# Example for SASL/PLAIN
# KAFKA_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username="user" password="pass";

# Listener tuning
KAFKA_LISTENER_ACK_MODE=batch

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/top-5g-pm-file-sync.log 